generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
}

model scrap_post {
  id Int @id @default(autoincrement())
  candidatoid String 
  perfil String
  nombrepagina String
  perfilurl String
  posturl String
  texto String
  hashtags String
  fechapublicacion DateTime
  likes Int
  comentarios Int
  compartidos Int
  vistas Int?
  img String
  fotoperfil String
  redsocial String
  departamento String
  titularidad String
  created_at DateTime @default(now())// created_at es como un created_at
}
model sin_publicacion{
  id Int @id @default(autoincrement())
  redsocial String
  departamento String
  titularidad String
  fecha_scrap DateTime @default(now())// fecha_scrap es como un created_at
  candidato String
}
model candidatos{
  id Int @id @default(autoincrement())
  departamento String
  titularidad String
  nombre_completo String
  facebook_url String
  instagram_url String
  tiktok_url String
  fecha_actualizacion DateTime @default(now())
  status String
}